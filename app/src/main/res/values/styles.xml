<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="circularCardHome">
        <item name="cardCornerRadius">@dimen/_25sdp</item>
        <item name="cardBackgroundColor">@color/secondaryColor</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="strokeColor">@color/secondaryColor</item>
    </style>
    
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="cornerRadius">@dimen/_18sdp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

</resources>