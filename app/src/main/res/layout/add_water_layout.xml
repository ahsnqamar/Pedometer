<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/water_glass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/water_glass"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/_4sdp"/>
    <TextView
        android:id="@+id/water_glass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200ml"
        android:textSize="@dimen/_6sdp"
        style="@style/Theme.Pedometer"
        app:layout_constraintTop_toBottomOf="@id/water_glass"
        app:layout_constraintStart_toStartOf="@id/water_glass"
        app:layout_constraintEnd_toEndOf="@id/water_glass"/>


</androidx.constraintlayout.widget.ConstraintLayout>